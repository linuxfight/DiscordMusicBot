      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
      <PackageReference Include="YoutubeExplode" Version="6.4.0" />
    </ItemGroup>

    <ItemGroup>
      <Content Include=".github\workflows\docker.yml" />
    </ItemGroup>

</Project>
